<section class="post-comment-list">
<article class="edit-form-container bg-light">
    <h5>
        Edit Post
    </h5>
    <form class="edit-post-form">
        <div>
            <p><input name="post-title" type="text" value="{{post.title}}" /></p>

            <input name="post-content" type="text" value="{{ post.content}}" />

        </div>

        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn"> Delete</button>
    </form>
</article>
{{!-- <hr> --}}
<form class="comment-form">
    <div>
        <input name="comment-body" placeholder="Comment"/>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
<div>

    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
</div>
{{!-- comment partials  --}}
{{> comments post.comments}}
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>